# Maintainer: hamki <hamki.do2000@gmail.com>
pkgname=mozilla-service-syncstorage-rs
pkgver=0.8.5
pkgrel=1
epoch=
pkgdesc=""
arch=('i686' 'x86_64')
url="https://github.com/mozilla-services/syncstorage-rs"
license=('MPL2')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("https://github.com/mozilla-services/syncstorage-rs/archive/$pkgver.tar.gz")
noextract=()
md5sums=(8a08b2e836eec0f8f922f560c65092f57feb141d5cd551413029a9e690939399)

prepare() {
  cd "$srcdir/$pkgname-$pkgver"

  patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"

  make -k check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

